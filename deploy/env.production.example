# Production .env for VPS (IP-only)
# Copy to project root as .env and replace YOUR_VPS_IP with your server IP

DEBUG=False
SECRET_KEY=GENERATE_NEW_KEY_WITH_command_below
ALLOWED_HOSTS=YOUR_VPS_IP,localhost,127.0.0.1
SITE_BASE_URL=http://YOUR_VPS_IP

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Cyber Sentinels <noreply@yoursite.com>

REDIS_URL=redis://127.0.0.1:6379/0
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
CELERY_BROKER_URL=redis://127.0.0.1:6379/0

